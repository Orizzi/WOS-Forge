{
  "name": "wos-calculator",
  "version": "1.0.0",
  "description": "Whiteout Survival Calculator - Resource calculator for charm upgrades",
  "type": "module",
  "main": "src/index.html",
  "scripts": {
    "start": "cd src && python -m http.server 8080",
    "build": "node scripts/build.js",
    "build:dev": "node scripts/build.js --no-cache-busting",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint \"src/style/**/*.css\"",
    "lint:js": "eslint \"src/Scripts/**/*.js\"",
    "lint:fix": "npm run lint:css:fix && npm run lint:js:fix",
    "lint:css:fix": "stylelint \"src/style/**/*.css\" --fix",
    "lint:js:fix": "eslint \"src/Scripts/**/*.js\" --fix",
    "import:all": "node scripts/extract-building-resources.js && node scripts/extract-charms-costs.js && node scripts/extract-chief-gear-costs.js && node scripts/extract-fc-csv.js && node scripts/extract-building-power.js && node scripts/extract-pets-costs.js",
    "import:buildings": "node scripts/extract-building-resources.js",
    "import:charms": "node scripts/extract-charms-costs.js",
    "import:chief-gear": "node scripts/extract-chief-gear-costs.js",
    "import:fc": "node scripts/extract-fc-csv.js",
    "import:power": "node scripts/extract-building-power.js",
    "import:pets": "node scripts/extract-pets-costs.js",
    "export:sheets": "node scripts/export-all-sheets-to-csv.js",
    "analyze:sheets": "node scripts/analyze-sheets.js"
  },
  "keywords": [
    "whiteout-survival",
    "calculator",
    "game-tools"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "csso": "^5.0.5",
    "csso-cli": "^4.0.2",
    "eslint": "^9.39.2",
    "exceljs": "^4.4.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "terser": "^5.44.1"
  }
}
