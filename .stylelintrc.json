{
  "extends": "stylelint-config-standard",
  "rules": {
    "indentation": null,
    "at-rule-no-unknown": [true, {"ignoreAtRules": ["supports", "document"]}],
    "selector-type-case": "lower",
    "property-no-unknown": true,
    "color-no-invalid-hex": true,
    "declaration-block-no-duplicate-properties": true,
    "block-no-empty": true,
    "selector-pseudo-class-no-unknown": [true, {"ignorePseudoClasses": ["not"]}],
    "declaration-block-single-line-max-declarations": null,
    "no-duplicate-selectors": [true, {
      "message": "Duplicate selectors are intentional for responsive overrides in media queries"
    }],
    "no-descending-specificity": null,
    "rule-empty-line-before": null,
    "color-function-notation": null,
    "color-function-alias-notation": null,
    "alpha-value-notation": null,
    "color-hex-length": null,
    "media-feature-range-notation": null,
    "shorthand-property-no-redundant-values": true,
    "declaration-property-value-no-unknown": null,
    "selector-class-pattern": null
  },
  "overrides": [
    {
      "files": ["**/*.min.css"],
      "rules": {
        "no-duplicate-selectors": null,
        "selector-class-pattern": null,
        "declaration-block-no-duplicate-properties": null
      }
    }
  ]
}

